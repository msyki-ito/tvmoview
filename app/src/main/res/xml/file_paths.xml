<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- アプリの内部ストレージ -->
    <files-path
        name="app_files"
        path="." />

    <!-- キャッシュディレクトリ -->
    <cache-path
        name="app_cache"
        path="." />

    <!-- 外部ストレージ（利用可能な場合） -->
    <external-files-path
        name="external_files"
        path="." />

    <!-- 外部キャッシュ -->
    <external-cache-path
        name="external_cache"
        path="." />

    <!-- メディアファイル用 -->
    <files-path
        name="media_files"
        path="media/" />

    <!-- 一時ファイル用 -->
    <cache-path
        name="temp_files"
        path="temp/" />
</paths>